# SwiftFormat Configuration for GabGab
# Version: 0.53.0

# File options
--swiftversion 6.2
--indent 4
--tabwidth 4
--maxwidth 120
--wraparguments before-first
--wrapcollections before-first
--closingparen balanced
--funcattributes prev-line
--typeattributes prev-line
--varattributes prev-line
--swiftversion 6.2

# Formatting options
--indentcase false
--trimwhitespace always
--commas always
--semicolons never
--operatorfunc spaced
--nospaceoperators ...,..<
--ranges spaced
--linebreaks lf
--hexliteralcase uppercase
--exponentcase lowercase
--decimalgrouping 3,4
--binarygrouping 4,8
--octalgrouping 4,8
--hexgrouping 4,8
--fractiongrouping disabled
--exponentgrouping disabled
--stripunusedargs always
--self insert
--selfrequired ["ViewController"]
--extensionacl on-declarations
--nospaceoperators ...,..<
--disable redundantSelf,redundantReturn,redundantParens,redundantBreak,redundantExtensionACL,redundantFileprivate,redundantObjc,redundantLet,redundantNilInit,redundantPattern,redundantVoidReturnType,redundantGet,redundantInit,redundantType,redundantRawValues,redundantNilCoalescing,redundantOptionalBinding,redundantExtensionACL,redundantNilInit,redundantPattern,redundantVoidReturnType,redundantGet,redundantInit,redundantType,redundantRawValues,redundantNilCoalescing,redundantOptionalBinding

# Rules to enable
--enable isEmpty
--enable sortedImports
--enable unusedArguments
--enable strongifiedSelf

# Rules to disable
--disable hoistTry
--disable redundantSelf
--disable redundantReturn
--disable redundantParens
--disable redundantBreak
--disable redundantExtensionACL
--disable redundantFileprivate
--disable redundantObjc
--disable redundantLet
--disable redundantNilInit
--disable redundantPattern
--disable redundantVoidReturnType
--disable redundantGet
--disable redundantInit
--disable redundantType
--disable redundantRawValues
--disable redundantNilCoalescing
--disable redundantOptionalBinding
